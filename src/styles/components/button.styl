.button
  font-size rem(14px)
  letter-spacing rem(1px)
  border none
  border-radius 50px
  font-weight 400
  text-transform uppercase
  cursor pointer
  white-space nowrap
  font-family $roboto

.white
  background $white
  color $black

.black
  background $black
  color $white

.medium
  padding 5px 20px

.large
  padding 10px 20px

.full
  width 100%
